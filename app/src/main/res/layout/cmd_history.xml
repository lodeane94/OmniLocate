<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmd_history_cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/cmd_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/cmd_date_issued_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_item_margin_right"
                android:layout_marginEnd="@dimen/fragment_item_margin_right"
                android:layout_alignBottom="@+id/cmd_name_tv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/cmd_date_issued_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_item_vertical_margin"
                android:layout_marginEnd="@dimen/fragment_item_vertical_margin"
                android:layout_alignBottom="@+id/cmd_name_tv"
                android:layout_toRightOf="@+id/cmd_date_issued_iv"
                android:layout_toEndOf="@+id/cmd_date_issued_iv"/>

            <ImageView
                android:id="@+id/cmd_issued_by_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_item_margin_right"
                android:layout_marginEnd="@dimen/fragment_item_margin_right"
                android:layout_alignBottom="@+id/cmd_name_tv"
                android:layout_toRightOf="@+id/cmd_date_issued_tv"
                android:layout_toEndOf="@+id/cmd_date_issued_tv"/>

            <TextView
                android:id="@+id/cmd_issued_by_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                android:layout_alignBottom="@+id/cmd_name_tv"
                android:layout_toRightOf="@+id/cmd_issued_by_iv"
                android:layout_toEndOf="@+id/cmd_issued_by_iv"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/cmd_issued_by_tv"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/cmd_result_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/fragment_item_margin_right"
                    android:layout_marginEnd="@dimen/fragment_item_margin_right" />

                <TextView
                    android:id="@+id/cmd_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_horizontal_margin"
                    android:layout_toRightOf="@+id/cmd_result_iv"
                    android:layout_toEndOf="@+id/cmd_result_iv"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
